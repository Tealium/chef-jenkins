   "spiderCfg": {
      "dataFile":"/tmp/CdnSpider.data", 
      "exceptionLog":"/tmp/CdnSpiderException.log", 
      "maxFtpAttempts" : 2, 
      "sequence" : [
         {
            "name" : "limelight",
            "action": "explore",
            "depth" : 3,
            "ignoreDirs" : [
               "utag",
               "mike",
               "bluebean72"
            ]
         },
         {
            "name" : "akamai",
            "master" : "limelight",
            "action": "check"
         },
         {
            "name" : "edgecast",
            "master" : "limelight",
            "action": "check"
         }
      ]
   },
  "cdnInfo": {
    "limelight": {
      "explorationRoot": "<%= @llnw_explorationRoot %>",
      "username_ftp": "<%= @llnw_ftp_username %>",
      "host": "<%= @llnw_ftp_host %>",
      "password_ftp": "<%= @llnw_ftp_password %>"
    }
    },
    "akamai": {
      "explorationRoot": "<%= @akami_explorationRoot %>",
      "username_ftp": "<%= @akami_ftp_username %>",
      "host": "<%= @akami_ftp_host %>",
